{
  "compilerOptions": {
    "outDir": "./.tsbuild/",
    "sourceMap": false,
    "target": "es2019",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "removeComments": true,
    "types": [
      "node",
      "@wdio/sync",
      "@wdio/mocha-framework",
      "devtools"
    ],
  },
  "include": [
    "./test/**/*.ts",
    "./src/**/*.ts",
    "./config/**.ts"
  ]
}
