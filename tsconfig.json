{
  "compilerOptions": {
    "outDir": "./.tsbuild/",
    "sourceMap": false,
    "target": "es2017",
    "module": "commonjs",
    "removeComments": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "types": [
      "node",
      "@wdio/sync",
      "@wdio/mocha-framework",
      "expect-webdriverio"
    ],
    "typeRoots": [
      "./src/types"
    ]
  },
  "include": [
    "./test/**/*.ts",
    "./src/**/*.ts",
    "./config/*.ts"
  ]
}
